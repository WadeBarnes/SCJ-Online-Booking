<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - BC Superior Courts Online Booking</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/dist/css/bootstrap.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/dist/css/site.css" asp-append-version="true"/>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/dist/css/vendor.min.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/dist/css/site.min.css" asp-append-version="true"/>
    </environment>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark header-nav">
    <div class="container">
        <a href="/"><img src="/images/bc-logo.svg" width="148" /></a>
        <p>Superior Courts Online Booking</p>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse">
            <partial name="_LoginPartial"/>
        </div>
    </div>
</nav>
    
<div class="container body-content">
    @RenderBody()
</div>
    
<footer>
    <nav class="footer-nav">
        <div class="container">
            <ul class="footer-nav-items">
                <li class="nav-item"><a href="/">Home</a></li>
                <li class="nav-item"><a href="#">Disclaimer, Copyright and Privacy</a></li>
                <li class="nav-item"><a href="#">Contact Us</a></li>
            </ul>
            <span class="copyright">&copy; 2019 - British Columbia Superior Courts</span>
        </div>
    </nav>
</footer>

<environment include="Development">
    <script src="~/dist/lib/jquery.js" asp-append-version="true"></script>
    <script src="~/dist/lib/bootstrap.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</environment>
<environment exclude="Development">
    <script src="~/dist/lib/jquery.min.js" asp-append-version="true"></script>
    <script src="~/dist/lib/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
</environment>

@RenderSection("Scripts", false)
</body>
</html>
