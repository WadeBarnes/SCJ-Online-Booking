@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Home";
}

@section NavBar {
    <div class="navbar-collapse collapse">
        <!-- no navbar on home page -->
    </div>
}

<div class="row home-intro">
    <div class="offset-lg-3 col-lg-6 col-md-12">
        <h1>Book Your Hearing Online</h1>
        <p class="intro">
            A routine booking should be quick and simple. This online tool allows you to book a hearing at your convenience without waiting in a queue on the phone.
        </p>
    </div>
</div>
<div class="row home-description">
    <div class="offset-lg-3 col-lg-6 col-md-12">
        <p class="intro">You can book up to ten trial management conferences (TMC) per day.</p>
    </div>
</div>
<div class="row home-login">
    <div class="col-md-12">
        <a class="btn btn-primary btn-lg" href="/scjob/booking/CaseSearch">Log in with BCeID</a>
        <p class="login-question">Don't have a BCeID?</p>
        <a href="#">Register for a BCeID</a>
    </div>
</div>
