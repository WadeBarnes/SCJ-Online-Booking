@inject BookingService service

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section NavBar
{
    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-collapse collapse">
        @RenderSection("BookingsLeft", false)
        <div style="margin-left: auto">
            <span>You can book @service.GetHearingsRemaining() hearings today.</span>
        </div>
        <ul class="nav navbar-nav">
            <li class="nav-item">
                <a asp-controller="User" asp-action="Logout">Logout</a>
            </li>
        </ul>
    </div>
}

@RenderBody()

@section Scripts {
    @RenderSection("Scripts", false)
}

@section Styles {
    @RenderSection("Styles", false)
}
